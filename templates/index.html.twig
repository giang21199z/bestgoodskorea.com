                    <!-- Hover Content -->
                    <div class="hover-content">
                        <div class="line"></div>
                        <h4 class="text-primary px-2">{{app.session.get('LANG') == 'kr' ? product.tenKr : product.ten}}</h4>
                        <p class="text-primary px-2">{{product.giaBan | number_format(0, ',', '.')}} VNƒê</p>
                    </div>
                </a>
            </div>
        {% endfor%}
      </div>
  </div>
  <!-- Product Catagories Area End -->
{% endblock %}
